#include "fft.h"
#include "complex.h"
#include "trig.h"

#define SAMPLE_SIZE 512

static float new_[SAMPLE_SIZE];
static float new_im[SAMPLE_SIZE];

//extern double sinLUT[8];
//extern double cosLUT[8];

struct complex_f {
    float re;
    float im;
} complex_f;

struct complex_d {
    double re;
    double im;
} complex_d;


void ffti_shuffle_f(float data[], unsigned log2_N)
{



    unsigned N = 1 << log2_N;   /* N */
    unsigned Nd2 = N >> 1;      /* N/2 = number range midpoint */
    unsigned Nm1 = N - 1;       /* N-1 = digit mask */
    unsigned i;                 /* index for array elements */
    unsigned j;                 /* index for next element swap location */

    for (i = 0, j = 0; i < N; i++) {
        if (j > i) {
            float tmp = data[i];
            data[i] = data[j];
            data[j] = tmp;
        }



        unsigned lszb = ~i & (i + 1);



        unsigned mszb = Nd2 / lszb;



        unsigned bits = Nm1 & ~(mszb - 1);
        j ^= bits;
    }
}



float fft(float* q, float* w, int n, int m, float sample_f) {
	int a,b,r,d,e,c;
	int k,place;
	a=n>>1; //wtf
	b=1;
	int i,j;
	float real=0,imagine=0;
	float max,frequency;

	int temp;

	ffti_shuffle_f(q, (int) log2(n));
	ffti_shuffle_f(w, (int) log2(n));

	for (int i=0; i<n;i++){
		new_[i] = q[i];
		new_im[i] = w[i];
	}

	//ffti_evaluate_f(q, w, (int) log2(n));


	// ORdering algorithm
	/*for(i=0; i<(m-1); i++){
		d=0;
		for (j=0; j<b; j++){
			for (c=0; c<a; c++){	
				e=c+d;
				new_[e]=q[(c<<1)+d];
				new_im[e]=w[(c<<1)+d];
				new_[e+a]=q[(c<<1)+1+d];
				new_im[e+a]=w[(c<<1)+1+d];
			}
			d+=(n/b);
		}		
		for (r=0; r<n;r++){
			q[r]=new_[r];
			w[r]=new_im[r];
		}
		b=b<<1;
		a=n/(b<<1);
	}*/
	//end ordering algorithm

	b=1;
	k=0;
	// m = 9, n = 512
	for (j=0; j<m; j++){
	//MATH
		for(i=0; i<n; i+=2){
			if (i%(n>>(int)log2(b))==0 && i!=0)
				k++;
			real=mult_real(q[i+1], w[i+1], cosLUT[k][(int) log2(b)], sinLUT[k][(int) log2(b)]);	  //need to use LUT for sine and cosine
			imagine=mult_im(q[i+1], w[i+1], cosLUT[k][(int) log2(b)], sinLUT[k][(int) log2(b)]);

			//real=mult_real(q[i+1], w[i+1], cosine(-PI*k/b), sine(-PI*k/b));	  //need to use LUT for sine and cosine
			//imagine=mult_im(q[i+1], w[i+1], cosine(-PI*k/b), sine(-PI*k/b));
			new_[i]=q[i]+real;
			new_im[i]=w[i]+imagine;
			new_[i+1]=q[i]-real;
			new_im[i+1]=w[i]-imagine;

		}
		for (i=0; i<n; i++){
			q[i]=new_[i];
			w[i]=new_im[i];
		}
	//END MATH

	//REORDER
		for (i=0; i<n>>1; i++){
			new_[i]=q[i<<1];
			new_[i+(n>>1)]=q[(i<<1)+1];
			new_im[i]=w[i<<1];
			new_im[i+(n>>1)]=w[(i<<1)+1];
		}
		for (i=0; i<n; i++){
			q[i]=new_[i];
			w[i]=new_im[i];
		}
	//END REORDER	
		b=b<<1;
		k=0;		
	}

	//find magnitudes
	max=0;
	place=1;
	for(i=1;i<(n>>1);i++) {
		new_[i]=q[i]*q[i]+w[i]*w[i];
		if(max < new_[i]) {
			max=new_[i];
			place=i;
		}
	}
	
	float s=sample_f/n; //spacing of bins
	
	frequency = (sample_f/n)*place;

	//curve fitting for more accuarcy
	//assumes parabolic shape and uses three point to find the shift in the parabola
	//using the equation y=A(x-x0)^2+C
	float y1=new_[place-1],y2=new_[place],y3=new_[place+1];
	float x0=s+(2*s*(y2-y1))/(2*y2-y1-y3);
	x0=x0/s-1;
	
	if(x0 <0 || x0 > 2) { //error
		return 0;
	}
	if(x0 <= 1)  {
		frequency=frequency-(1-x0)*s;
	}
	else {
		frequency=frequency+(x0-1)*s;
	}
	
	return frequency;
}

void ffti_evaluate_f(float *re, float *im, int log2_N)
{
	unsigned N;
	    unsigned r;
	    unsigned m, md2;
	    unsigned n, k;
	    unsigned i_e, i_o;
	    double theta_2pi;
	    double theta;       /* Use double for precision */
	    //struct complex_d Wm, Wmk;  /* Use double for precision */
	    double Wm_re;
	    double Wm_im;
	    double Wmk_re;
	    double Wmk_im;
	    //struct complex_d u, t;     /* Use double for precision */
	    double u_re;
	    double u_im;
	    double t_re;
	    double t_im;

	    N = 1 << log2_N;
	    theta_2pi = -PI * 2;

	    for (r = 1; r <= log2_N; r++)
	    {
	        m = 1 << r;
	        md2 = m >> 1;
	        theta = theta_2pi / m;
	        //Wm_re = cosLUT[r - 1];
	        //Wm_im = sinLUT[r - 1];
	        Wm_re = cos(theta);
	        Wm_im = sin(theta);
	        for (n = 0; n < N; n += m)
	        {
	            Wmk_re = 1.f;
	            Wmk_im = 0.f;
	            for (k = 0; k < md2; k++)
	            {
	                i_e = n + k;
	                i_o = i_e + md2;
	                u_re = re[i_e];
	                u_im = im[i_e];
	                t_re = complex_mul_re(Wmk_re, Wmk_im, re[i_o], im[i_o]);
	                t_im = complex_mul_im(Wmk_re, Wmk_im, re[i_o], im[i_o]);
	                re[i_e] = u_re + t_re;
	                im[i_e] = u_im + t_im;
	                re[i_o] = u_re - t_re;
	                im[i_o] = u_im - t_im;
	                t_re = complex_mul_re(Wmk_re, Wmk_im, Wm_re, Wm_im);
	                t_im = complex_mul_im(Wmk_re, Wmk_im, Wm_re, Wm_im);
	                Wmk_re = t_re;
	                Wmk_im = t_im;
	            }
	        }
	    }
}

